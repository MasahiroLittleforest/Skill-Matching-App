<div class="container">
  <h1>Skill Edit</h1>

  <%= form_for(@skill) do |f| %>
    <div class="input-field col s12">
      <%= f.text_field :name, class: "validate" %>
      <%= f.label :name, 'Skill' %>
    </div>

    <div class="input-field col s12">
      <%= f.text_field :level, class: "validate" %>
      <%= f.label :level, 'Level' %>
    </div>

    <div class="input-field col s12">
      <%= f.text_field :description, class: "validate" %>
      <%= f.label :description, 'Description' %>
    </div>

    <div class="skill-edit-buttons center">
      <%= link_to 'Cancel', skill_path(@skill), class: "waves-effect waves-dark btn skill-edit-cancel amber lighten-5 black-text" %>
      <%= f.submit 'Update', class: "waves-effect waves-dark btn skill-update amber lighten-2 black-text" %>
    </div>
  <% end %>
</div>