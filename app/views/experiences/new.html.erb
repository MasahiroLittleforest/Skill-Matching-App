<div class="container">
  <h1>Experience New</h1>

  <%= form_for(@experience) do |f| %>
    <div class="input-field col s12">
      <%= f.text_field :title, class: "validate" %>
      <%= f.label :title, 'Experience' %>
    </div>

    <div class="input-field col s12">
      <%= f.text_area :description, class: "materialize-textarea" %>
      <%= f.label :description, 'description' %>
    </div>

    <div class="input-field col s12">
      <%= f.text_field :date, class: "datepicker" %>
      <%= f.label :date, 'Date' %>
    </div>

    <div class="center">
      <%= f.submit 'Submit', class: "waves-effect waves-dark btn experience-submit amber lighten-2 black-text" %>
    </div>
  <% end %>
</div>