<div class="container">
  <h1>ユーザー編集</h1>
  <div class="row">
    <%= form_for(@user) do |f| %>
      <div class="file-field input-field col s12">
        <div class="btn">
        <span>Image</span>
          <%= f.file_field :image %>
        </div>
        <div class="file-path-wrapper">
          <%= f.text_field :image, class: "file-path validate" %>
        </div>
      </div>

      <div class="input-field col s12">
        <%= f.text_field :user_name, class: "validate" %>
        <%= f.label :user_name %>
      </div>

      <div class="input-field col s4">
        <%= f.text_field :first_name, class: "validate" %>
        <%= f.label :first_name %>
      </div>

      <div class="input-field col s4">
        <%= f.text_field :middle_name, class: "validate" %>
        <%= f.label :middle_name %>
      </div>

      <div class="input-field col s4">
        <%= f.text_field :last_name, class: "validate" %>
        <%= f.label :last_name %>
      </div>

      <div class="input-field col s12">
        <%= f.text_field :birthday, class: "datepicker" %>
        <%= f.label :birthday %>
      </div>

      <div class="input-field col s12">
        <%= f.text_area :bio, class: "materialize-textarea" %>
        <%= f.label :bio, 'Bio' %>
      </div>

      <div class="center">
        <div class="user_edit_buttons">
          <%= link_to 'キャンセル', user_path(@user), class: "waves-effect waves-dark btn cancel amber lighten-5 black-text" %>
          <%= f.submit '更新する', class: "waves-effect waves-dark btn submit amber lighten-2 black-text" %>
        </div>
      </div>
    <% end %>

    <div class="open-info-settings">
      <div class="switch age">
        年齢:
        <label>
          非公開
          <input type="checkbox">
          <span class="lever"></span>
          公開
        </label>
      </div>

      <div class="switch age">
        性別:
        <label>
          非公開
          <input type="checkbox">
          <span class="lever"></span>
          公開
        </label>
      </div>

      <div class="switch age">
        職業:
        <label>
          非公開
          <input type="checkbox">
          <span class="lever"></span>
          公開
        </label>
      </div>

      <div class="switch age">
        メールアドレス:
        <label>
          非公開
          <input type="checkbox">
          <span class="lever"></span>
          公開
        </label>
      </div>
    </div>
  </div>
</div>